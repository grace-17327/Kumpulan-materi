#include <ncurses.h>
#include <string>

int main() {
    initscr();
    cbreak();
    noecho();
    keypad(stdscr, TRUE);

    int y = 0, x = 0;
    mvprintw(0, 0, "Gunakan tombol panah untuk menggerakan teks. Tekan 'q' untuk keluar.");

    int ch;
    while ((ch = getch()) != 'q') {
        switch(ch) {
            case KEY_UP:
                y = (y > 0) ? y - 1 : y;
                break;
            case KEY_DOWN:
                y = (y < LINES - 1) ? y + 1 : y;
                break;
            case KEY_LEFT:
                x = (x > 0) ? x - 1 : x;
                break;
            case KEY_RIGHT:
                x = (x < COLS - 1) ? x + 1 : x;
                break;
        }
        clear();
        mvprintw(y, x, "Teks bergerak");
        refresh();
    }

    endwin();
    return 0;
}






#include <iostream>
#include <iomanip>
#include <string>
#include <cmath>

using namespace std;

int main() {
    int kd_brg, jml_brg, total_hrg;
    string nm_brg;
    cout << "Masukkan kode barang: ";
    cin >> kd_brg;
    cout << "Masukkan jumlah barang: ";
    cin >> jml_brg;

    if (kd_brg == 1) {
        nm_brg = "Sabun Mandi";
        total_hrg = jml_brg * 2000;
    } else if (kd_brg == 2) {
        nm_brg = "Shampoo";
        total_hrg = jml_brg * 6000;
    } else if (kd_brg == 3) {
        nm_brg = "Pasta Gigi";
        total_hrg = jml_brg * 3500;
    } else {
        nm_brg = "Barang Lain";
        total_hrg = 0;
    }

    cout << "Nama barang: " << nm_brg << endl;
    cout << "Total harga: " << total_hrg << endl;

    return 0;
}

