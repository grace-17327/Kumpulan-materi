int main (){
int arr[] = {5,3,4,1,2};
int n = sizeof (arr) / sizeof(arr[0]);

cout << "Array sebelum diurutkan: ";
for (int i=0; i<n; i++) {
cout << arr[i];
}
cout << endl;

for (int i=0; i<n-1; i++) {
for (int j=0; j<n-1; j++) {
if (arr[j] > arr[j+1]) {
int tamp = arr[j];
arr[j] = arr[j+1];
arr[j+1] = temp;
}
}
}

cout << "Array setelah diurutkan: ";
for (int i=0; i<n; i++) {
cout << arr[i] << " ";
}
cout << endl;
}




