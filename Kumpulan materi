#include <iostream>
using namespace std;

int main() {

int a = 2;
int b = 3;
int c = a + b;

cout << "Nilai a:" << a << endl;
cout << "Nilai b:" << b << endl;
cout << "Nilai c:" << c << endl;

cout << "Nilai a setelah (a + b):" << a + b << endl;
return 0;
}





